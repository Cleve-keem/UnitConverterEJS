<form id="length-form" action="/api/convert/length" method="post">
  <div class="input-field">
    <label for="length-value">Enter the length to convert</label>
    <input type="text" id="length-value" name="value" />
  </div>
  <div class="input-field">
    <label for="length-from">Unit to convert from</label>
    <input type="text" id="length-from" name="from" />
  </div>
  <div class="input-field">
    <label for="length-to">Unit to convert to</label>
    <input type="text" id="length-to" name="to" />
  </div>
  <button>Convert</button>
</form>
